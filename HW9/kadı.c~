#include <stdio.h>
#include <string.h>

/*----------------------------------------------------------------------------*/
/*                              #defines                                      */
/*----------------------------------------------------------------------------*/
#define NAME_SIZE 25
#define NEIGB_NUM 10
/*----------------------------------------------------------------------------*/
/*								Typedefs                                      */
/*----------------------------------------------------------------------------*/
typedef struct{

	char name[NAME_SIZE];              /* Country name                        */
	int pop;                           /* country population                  */
	int area;                          /* country area in km squares          */
	int sold;                          /* Number of soldiers in the army      */
	char neig[NEIGB_NUM];              /* Neighbor countries                  */

}co_t;

/*----------------------------------------------------------------------------*/
/*							Function Prototypes                               */
/*----------------------------------------------------------------------------*/
/*----------------------------------------------------------------------------*/
/*																              */
/* void read_a(co_t *country)                                                 */
